{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["artifact_type", "prompt", "code", "trace_steps", "concept"],
  "properties": {
    "artifact_type": { "const": "tracing" },
    "prompt": { "type": "string", "minLength": 1 },
    "code": { "type": "string", "minLength": 1 },
    "trace_steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["line", "state"],
        "properties": {
          "line": { "type": "integer", "minimum": 1 },
          "state": { "type": "object" }
        },
        "additionalProperties": false
      }
    },
    "concept": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}
